<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.question.QuestionStatisticMapper">
    <update id="addReferencedCount" parameterType="list" >
        UPDATE question_statistic SET referencedCount = referencedCount + 1
        WHERE
            <foreach collection="list" item="question" >
                id = #{question.id} AND type = #{question.type}
            </foreach>
    </update>
</mapper>